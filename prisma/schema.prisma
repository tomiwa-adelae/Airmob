generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String
  phone     String
  subject   String // General, Partnership, Procurement, Technical, HSE
  message   String   @db.Text
  createdAt DateTime @default(now())
}

model TechnicalProposal {
  id           String   @id @default(cuid())
  fullName     String
  email        String
  businessLine String // Exploration Support, Lubricant Production, etc.
  details      String   @db.Text
  status       String   @default("PENDING") // PENDING, REVIEWING, COMPLETED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
